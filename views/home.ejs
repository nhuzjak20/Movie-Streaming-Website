<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="login.css">
    <link rel="stylesheet" href="home.css">
    <script src="https://unpkg.com/htmx.org@1.9.5" integrity="sha384-xcuj3WpfgjlKF+FXhSQFQ0ZNr39ln+hwjN3npfM9VBnUskLolQAcN80McRIVOPuO" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
    <style>
        .comment {
            border: 1px solid #ccc;
            padding: 10px;
            margin: 10px;
            background-color: #f9f9f9;
            border-radius: 5px;
        }

        /* CSS za korisničko ime */
        .username {
            font-weight: bold;
            color: #0366d6;
        }

        /* CSS za tekst komentara */
        .comment-text {
            margin-top: 5px;
        }

        /* CSS za datum komentara */
        .comment-date {
            font-size: 12px;
            color: #777;
        }
    </style>
</head>
<body>
    <div class="footer-klasa rastegni" style="padding: 1px;">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
              Dobro došao, <%= username %>
            </button>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/odjava">Odjava</a></li>
            </ul>
        </div>
        <div class="" style="padding: 0.5%;">
            <h1>BlogSite</h1>
        </div>
        <div class="" style="display: flex; align-items: center; width: 16%;">

            <a href="#" class="margina-mala">O autoru</a>
            <a href="#">Korištene tehnologije</a>
        </div>
    </div>
    <div class="mainMreza" id="parent">
        <div id="div1" class="glassmorph" class="">
            <form action="/posaljiobrazac" method="post" class="margina-mala">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Naslov:</label>
                    <input type="text" name="naslov" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text">Napiši naslov objave</div>
                  </div>
                  <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Upiši komentar:</label>
                    <textarea class="form-control" name="komentar" id="exampleFormControlTextarea1" rows="4"></textarea>
                  </div>
                  <select class="form-select" name="kategorija" aria-label="Default select example">
                    <option selected>Odaberi kategoriju:</option>
                    <option value="1">Filmovi</option>
                    <option value="2">Video Igrice</option>
                    <option value="3">Web Development</option>
                    <option value="4">Serije</option>
                  </select>
                  <div class="poravnaj">
                    <button type="submit" class="btn btn-primary">Podnesi</button>
                    <button type="reset" class="btn btn-secondary">Obriši</button>
                  </div>
            </form>
        </div>
        <div id="div2" class="glassmorph centriraj">
            <div style="margin: 2%; display: flex; flex-direction: column; align-items: center;">
                <div class="slika">
                    <img src=<%= slika %> alt="">
                </div>
                <div class="tekst">
                    <h4><%= username %></h4>
                </div>
                <div class="statistika">
                    <h6>Broj objava: <%= num %></h6>
                </div>
            </div>
        </div>
        <div id="div3" class="glassmorph">
            <div class="flexaj margina-mala">
                <form hx-post="/ObjaveApi" style="width: auto; display: flex;" hx-target="#objave">
                  <select style="width: auto;" class="form-select" name="kategorija" aria-label="Default select example">
                    <option value="5">Posljednje objave</option>
                    <option value="1">Filmovi</option>
                    <option value="2">Video Igrice</option>
                    <option value="3">Web Development</option>
                    <option value="4">Serije</option>
                  </select>
                  <button class="btn btn-primary" type="submit">Potraži</button>
                </form>
                  
                <h4 >Objave</h4>
              </div>
              <hr>
              <div id="objave">

              </div>
        </div>
    </div>
</body>
</html>